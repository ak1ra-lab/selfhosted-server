---
apiVersion: v1
kind: Secret
metadata:
  name: zerossl-dns01-eab-hmac-key-secret
  namespace: cert-manager
data:
  secret: {{ zerossl_eab_hmac_key | ansible.builtin.b64encode }}
---
apiVersion: v1
kind: Secret
metadata:
  namespace: cert-manager
  name: zerossl-dns01-cloudflare-api-token
data:
  api-token: {{ cloudflare_api_token | ansible.builtin.b64encode }}
---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: zerossl-dns01-cloudflare
spec:
  acme:
    server: https://acme.zerossl.com/v2/DV90
    email: {{ acme_email }}
    privateKeySecretRef:
      name: zerossl-dns01-cloudflare-account-key

    # for each cert-manager new EAB credencials are required
    externalAccountBinding:
      keyID: {{ zerossl_eab_key_id }}
      keySecretRef:
        name: zerossl-dns01-eab-hmac-key-secret
        key: secret

    solvers:
      - dns01:
          cloudflare:
            apiTokenSecretRef:
              name: zerossl-dns01-cloudflare-api-token
              key: api-token
        selector:
          dnsZones: {{ cloudflare_dns_zones | list }}
