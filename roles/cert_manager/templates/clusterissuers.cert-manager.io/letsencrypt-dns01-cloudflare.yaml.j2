---
apiVersion: v1
kind: Secret
metadata:
  namespace: cert-manager
  name: letsencrypt-dns01-cloudflare-api-token
data:
  api-token: {{ cloudflare_api_token | ansible.builtin.b64encode }}
---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-dns01-cloudflare
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: {{ acme_email }}
    privateKeySecretRef:
      name: letsencrypt-dns01-cloudflare-account-key
    solvers:
      - dns01:
          cloudflare:
            apiTokenSecretRef:
              name: letsencrypt-dns01-cloudflare-api-token
              key: api-token
        selector:
          dnsZones: {{ cloudflare_dns_zones | list }}
